<div class='photo-card'>
  <a href="{{largeImageURL}}">
    <img src="{{webformatURL}}" alt="{{tags}}" loading="lazy"/>
  </a>
  <div class='info'>
    <p class="info-item">
      <p>Likes</p>
      {{likes}}
    </p>
    <p class="info-item">
      <p>Views</p>
      {{views}}
    </p>
    <p class="info-item">
      <p>Comments</p>
      {{comments}}
    </p>
    <p class="info-item">
      <p>Downloads</p>
      {{downloads}}
    </p>
  </div>
</div>